@page "/vault/{VaultId}"
@using PasswordManager.Web.Components.Fragments
@using PasswordManager.Web.Components.Vault
@using PasswordManager.Web.Components.Modals

<PageTitle>Vault - @(vault?.Name ?? "...")</PageTitle>

@if (vault == null)
{
    <p>Chargement...</p>
}
else if (!isUnlocked)
{
    <OpenVaultModal
        VaultName="@vault.Name"
        MasterPassword="@masterPassword"
        MasterPasswordChanged="@((string v) => masterPassword = v)"
        ErrorMessage="@errorMessage"
        OnUnlock="UnlockVault" />
}
else
{
    <h1 class="titleHome">
        @vault.Name
        @if (vault.IsCreator)
        {
            <button class="btn @(vault.IsShared ? "btn-success" : "btn-secondary")" @onclick="ToggleShare">
                @(vault.IsShared ? "Partagé" : "Partager")
            </button>
        }
    </h1>
    <div class="btnAddContainer">
        <button class="btnAdd" @onclick="() => showCreateForm = !showCreateForm">Ajouter une entrée</button>
        <i class="fa-solid fa-plus"></i>
    </div>

    @if (showCreateForm)
    {
        <div class="create-entry-form">
            <h3>Nouvelle entrée</h3>
            <input @bind="newEntry.Title" placeholder="Titre" />
            <input @bind="newEntry.Username" placeholder="Nom d'utilisateur" />
            <input @bind="newEntry.Password" placeholder="Mot de passe" />
            <button @onclick="CreateEntry">Enregistrer</button>
        </div>
    }

    @if (showShareModal)
    {
        <AddUserModal VaultId="@VaultId" 
                      ExistingUsers="@vault.SharedWith" 
                      IsShared="@vault.IsShared"
                      OnSharingChanged="@OnSharingChanged"
                      OnClose="ToggleShare" />
    }

    <div class="vaultEntries">
        @foreach (var entry in decryptedEntries)
        {
            <VaultEntry Title="@entry.Title"
                        Username="@entry.Username"
                        Password="@entry.Password"
                        OnShowPassword="@(() => ShowPassword(entry))"
                        Category=""
                        OnDelete="@(() => DeleteEntry(entry.Id))" />
        }
    </div>
}
