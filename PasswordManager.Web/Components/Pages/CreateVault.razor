@page "/createVault"
@inject NavigationManager NavigationManager

<div class="vaultCreateContainer">
    <div class="vaultCreateCard">
        <div class="vaultCreateHeader">
            <div>
                <i class="fa-solid fa-lock"></i>
                <h2>Créer un coffre</h2>
            </div>
            <p>Renseignez les informations ci-dessous pour créer un nouveau coffre.</p>
        </div>

        <form class="vaultCreateform">
            <div class="form-group">
                <label for="vaultName">Nom du coffre</label>
                <input id="vaultName" type="text" placeholder="Ex : Coffre personnel" />
            </div>

            <div class="form-group">
                <label for="vaultPassword">Mot de passe</label>
                <input id="vaultPassword" type="password" placeholder="Entrez un mot de passe" />
            </div>

            <button type="button" class="btn-secondary" id="generateBtn">
                <i class="fa-solid fa-wand-magic-sparkles"></i> Générer un mot de passe
            </button>

            <div class="password-strength">
                <div class="strength-bar"></div>
                <span class="strength-label">Faible</span>
            </div>

            <button type="button" class="btn-primary" @onclick="eventCreateVault">
                <i class="fa-solid fa-check"></i> Enregistrer
            </button>
        </form>
    </div>
</div>

@code {
    async Task eventCreateVault()
    {
        // Appel API, stockage, etc.

        NavigationManager.NavigateTo("/");
    }
}
