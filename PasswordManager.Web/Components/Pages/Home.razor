@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using PasswordManager.Web.Components.Vault
@using PasswordManager.Web.Services

@inject NavigationManager Navigation
@inject VaultService VaultService

<VaultList Vaults="vaults" />

@code {
    private List<VaultList.VaultModel> vaults = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var accessibleVaults = await VaultService.GetAccessibleVaultsAsync();
            if (accessibleVaults != null)
            {
                vaults = accessibleVaults.Select(v => new VaultList.VaultModel
                {
                    Identifier = v.Identifier,
                    Name = v.Name,
                    IsShared = v.IsShared,
                    Category = v.IsShared ? "Partagé" : "Personnel"
                }).ToList();
            }
        }
        catch (Exception ex)
        {
            // Handle error, e.g., show a message
            Console.WriteLine($"Error fetching vaults: {ex.Message}");
        }
    }
}

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name!
        <form action="authentication/logout" method="post">
            <AntiforgeryToken />
            <input type="hidden" name="ReturnUrl" value="@(Navigation.Uri)" />
            <button type="submit" class="nav-link btn btn-link">
                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
            </button>
        </form>
    </Authorized>
    
    <NotAuthorized>
        <a href="authentication/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
