<div class="modal-backdrop show" style="display: block; background-color: rgba(0,0,0,0.5);"></div>
<div class="modal show" style="display: block;" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Partager le coffre</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked="@IsShared" @onchange="ToggleSharing">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Activer le partage</label>
                </div>

                @if (IsShared)
                {
                    <div class="mb-3">
                        <label for="userSearch" class="form-label">Rechercher un utilisateur (email)</label>
                        <input type="text" class="form-control" id="userSearch" @bind="searchQuery" @bind:event="oninput" @onkeyup="SearchUsers" placeholder="Entrez un email..." />
                    </div>

                    @if (searchResults.Any())
                    {
                        <ul class="list-group mb-3">
                            @foreach (var user in searchResults)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @user.Email
                                    <button class="btn btn-primary btn-sm" @onclick="() => AddUser(user)">Ajouter</button>
                                </li>
                            }
                        </ul>
                    }
                    else if (!string.IsNullOrEmpty(searchQuery) && !isSearching)
                    {
                        <p class="text-muted">Aucun utilisateur trouvé.</p>
                    }

                    @if (ExistingUsers != null && ExistingUsers.Any())
                    {
                        <h6 class="mt-4">Utilisateurs ayant accès :</h6>
                        <ul class="list-group">
                            @foreach (var user in ExistingUsers)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        @user.Email
                                        @if (user.IsAdmin)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">Admin</span>
                                        }
                                    </div>
                                    <div class="d-flex gap-2">
                                        @if (!user.IsAdmin)
                                        {
                                            <button class="btn btn-outline-warning btn-sm" @onclick="() => ToggleAdmin(user, true)" title="Promouvoir Admin">
                                                <i class="fa-solid fa-crown"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary btn-sm" @onclick="() => ToggleAdmin(user, false)" title="Rétrograder">
                                                <i class="fa-solid fa-user"></i>
                                            </button>
                                        }

                                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveUser(user)" title="Supprimer l'accès">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                }
                else
                {
                    <p class="text-muted">Le partage est désactivé. Activez-le pour ajouter des utilisateurs.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Fermer</button>
            </div>
        </div>
    </div>
</div>
