<div class="vaultCard">
    <div class="vaultHeader">
        <h3 class="titleVault">@Title</h3>
        <button class="menuBtn" @onclick="ToggleMenu">
            <i class="fa-solid fa-ellipsis-vertical"></i>
        </button>
    </div>

    @if (showMenu)
    {
        <div class="vaultMenu">
            <button class="deleteBtn" @onclick="OnDelete">
                <i class="fa-solid fa-trash"></i> Supprimer
            </button>
        </div>
    }

    <div class="vaultField">
        <i class="fa-solid fa-user"></i>
        <span>@Username</span>
        <button class="copyBtn" @onclick="() => Copy(Username)">
            <i class="fa-regular fa-copy"></i>
        </button>
    </div>

    <div class="vaultField">
        <i class="fa-solid fa-key"></i>
        <span>@MaskedPassword</span>
        <button class="copyBtn" @onclick="() => Copy(Password)">
            <i class="fa-regular fa-copy"></i>
        </button>
    </div>

    <div class="vaultFooter">
        <i class="@CategoryIcon"></i>
        <span class="category">@Category</span>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Username { get; set; } = "";
    [Parameter] public string Password { get; set; } = "";
    [Parameter] public string Category { get; set; } = "Default";
    [Parameter] public EventCallback OnDelete { get; set; }

    private bool showMenu = false;

    private string MaskedPassword =>
        new string('•', Password?.Length > 0 ? Password.Length : 8);

    private void ToggleMenu()
    {
        showMenu = !showMenu;
    }

    private string CategoryIcon =>
        Category?.ToLower() switch
        {
            "personnel" => "fa-solid fa-lock",
            "partagé" => "fa-solid fa-users",
            _ => "fa-solid fa-tag"
        };

    private async Task Copy(string text)
    {
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", text);
    }

    [Inject] IJSRuntime JS { get; set; } = default!;
}
