@if (IsOpen)
{
    <div class="modal-backdrop fade show"></div>

    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content vaultCreateCard">

                <div class="modal-header vaultCreateHeader">
                    <i class="fa-solid fa-lock"></i>
                    <h2>Nouvelle entrée</h2>
                    <button class="btn-close" @onclick="OnCancel"></button>
                </div>

                <div class="modal-body vaultCreateform">

                    <div class="sectionForm">
                        <label>Titre</label>
                        <input @bind="Entry.Title" />
                    </div>

                    <div class="sectionForm">
                        <label>Nom d'utilisateur</label>
                        <input @bind="Entry.Username" />
                    </div>

                    <div class="sectionForm">
                        <label>Mot de passe</label>
                        <input type="text" @bind="Entry.Password" />
                    </div>

                    <button class="btn-primary" @onclick="OnConfirm">
                        <i class="fa-solid fa-check"></i>
                        Enregistrer
                    </button>

                </div>

            </div>
        </div>
    </div>
}