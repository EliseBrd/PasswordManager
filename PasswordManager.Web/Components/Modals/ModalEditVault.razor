@if (IsOpen)
{
    <div class="modal-backdrop fade show"></div>

    <div class="modal fade show d-block">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-pen"></i>
                        Modifier le coffre
                    </h5>
                    <button class="btn-close" @onclick="Cancel"></button>
                </div>

                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ErrorMessage
                        </div>
                    }

                    <label>Nom du coffre</label>
                    <input class="form-control"
                           @bind="VaultName" />

                    <hr />

                    <label>Nouveau mot de passe (optionnel)</label>
                    <input type="text"
                           class="form-control"
                           value="@NewPassword"
                           @oninput="OnPasswordInput" 
                           placeholder="Nouveau mot de passe" />
                    
                    @if (!string.IsNullOrWhiteSpace(NewPassword))
                    {
                        <label>Confirmer le mot de passe</label>
                        <input type="text"
                               class="form-control mb-2"
                               value="@ConfirmNewPassword"
                               @oninput="OnConfirmPasswordInput" 
                               placeholder="Répétez le mot de passe" />
                    }

                    <small class="text-muted d-block mb-3">
                        Laissez vide pour conserver le mot de passe actuel.
                    </small>
                    
                    <PasswordTools Password="@NewPassword"
                                   OnGenerated="OnPasswordGenerated" />

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Cancel">
                        Annuler
                    </button>
                    <button class="btn btn-primary" @onclick="Confirm">
                        Enregistrer
                    </button>
                </div>

            </div>
        </div>
    </div>
}
